{
  "name": "izing-development",
  "version": "1.0.0",
  "description": "Scripts de desenvolvimento para o projeto Izing",
  "main": "start-dev.js",
  "scripts": {
    "dev": "node start-dev.js",
    "dev:backend": "cd backend && pm2 start ecosystem.config.js",
    "dev:frontend-vue": "cd frontend-vue && pm2 start ecosystem.config.js",
    "dev:frontend-react": "cd frontend-react && pm2 start ecosystem.config.js",
    "stop": "pm2 delete all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "status": "pm2 status",
    "install:all": "npm run install:backend && npm run install:frontend-vue && npm run install:frontend-react",
    "install:backend": "cd backend && npm install",
    "install:frontend-vue": "cd frontend-vue && npm install",
    "install:frontend-react": "cd frontend-react && npm install"
  },
  "keywords": [
    "izing",
    "development",
    "pm2",
    "nodejs",
    "react",
    "vue"
  ],
  "author": "Durans",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}